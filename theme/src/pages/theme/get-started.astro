---
import {Icon} from 'astro-icon';
import { Button, Container, TextCardSection } from '@littlesticks/odyssey-theme-components';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Download App',
	description: 'Download App for Liberated Logic.',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>Download</h1>
			<div class="cta-buttons__container">
        <Button
        href=""
        outlined
        newTab
        customIcon
        >
        Get Messaging app
        <Fragment slot="icon">
          <Icon name="ic:baseline-launch" />
        </Fragment>
      </Button>
			</div>
		</TextCardSection>
	</Container>
</Layout>

<style>
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
	}
	.cta-buttons__container :global(a) {
    margin-right: 1rem;
		margin-bottom: 1rem;
	}
</style>
